

<% content_for :right_leaf do %>
  <h1>New Recipe</h1>
  <form class="new_recipe" method="POST" action="/recipes">
    <ul>
      <li>
        <label>
          Recipe Name 
          <input type="text" id= "recipe_name" name="recipe_name" required minlength="1">
        </label>   
      </li>
      <li>
        <label>
          Recipe Category 
          <input type="text" id="recipe_category" name="recipe_category">
        </label>
      </li>
      <li>
        <label>
          Recipe Image (URL only)
          <input type="text" id="recipe_image_url" name="recipe_image_url">
        </label>
      </li>
      <li>
        <button type="submit">Create Recipe! (add ingredients later)</button>
      </li> 
    </ul>

  </form>
<% end %>

