<% content_for :right_leaf do %>
<h1>Select Quantity (grams)</h1>
<%== @database.display_ingredient_data(@ingredient)%>
<form id="ingredient_data" method="POST" action="/recipe/<%=@recipe[:id]%>/ingredient/<%=params[:ingredient_id]%>/add">
	<label>
		Servings:
		<input type="number" step="0.01" id="num_servings" value="1" max="100" min=0 name="num_servings">
	</label>
	<button type="submit">Add to Recipe</button>
	<button type="submit" formaction="/recipe/<%=params[:recipe_id]%>" formmethod="GET">Cancel</button>
</form>
<% end %>